{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-styles",
      "version": "1.0.0"
    },
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    },
    {
      "name": "alexa-profiles",
      "version": "1.0.0"
    }
  ],
  "resources": [
    {
      "description": "background image",
      "strings": {
        "backgroundImg": "https://s3.amazonaws.com/emmetts-game/chalkboard-517818_1920.jpg"
      }
    }
  ],
  "styles": {
    "mainFont": {
      "values": [
        {
          "color": "#1ce",
          "fontFamily": "@fontFamilyRomanSerif",
          "fontWeight": "@fontWeightLight",
          "fontSize": "@fontSizeLarge",
          "letterSpacing": "@letterSpacingExpanded"
        }
      ]
    }
  },
  "layouts": {
    "BackgroundImage": {
      "parameters": ["imgSrc"],
      "items": [
        {
          "type": "Image",
          "source": "${imgSrc}",
          "height": "100vh",
          "width": "100vw",
          "position": "absolute",
          "scale": "best-fill"
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": ["datasource"],
    "items": [
      {
        "type": "Container",
        "width": "100vw",
        "height": "100vh",
        "direction": "column",
        "items": [
          {
            "type": "BackgroundImage",
            "imgSrc": "@backgroundImg"
          },
          {
            "type": "Container",
            "width": "100vw",
            "height": "100vh",
            "alignItems": "center",
            "direction": "column",
            "items": [
              {
                "type": "Text",
                "text": "${datasource.main.properties.headerTitle}",
                "style": "textStyleDisplay2",
                "color": "#1ce",
                "paddingBottom": "5vh",
                "paddingTop": "8vh"
              },
              {
                "type": "Frame",
                "backgroundColor": "rgba(255, 255, 255, 0.30)",
                "width": "65vw",
                "height": "50vh",
                "borderWidth": "5px",
                "borderColor": "white",
                "borderRadius": "50",
                "paddingTop": "5vh",
                "paddingBottom": "5vh",
                "paddingRight": "5vh",
                "paddingLeft": "5vh",
                "item": [
                  {
                    "type": "Image",
                    "source": "${datasource.main.properties.imageUrl}",
                    "width": "100%",
                    "height": "100%",
                    "align": "center",
                    "scale": "best-fit"
                  }
                ]
              },
              {
                "when": "${@viewportProfile != @hubRoundSmall}",
                "type": "AlexaFooter",
                "hintText": "${datasource.main.properties.hintText}",
                "paddingTop": "5vh",
                "width": "100vw",
                "textAlign": "center"
              }
            ]
          }
        ]
      }
    ]
  }
}
